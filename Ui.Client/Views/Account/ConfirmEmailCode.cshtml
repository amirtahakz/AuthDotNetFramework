@model Ui.Core.ViewModels.ConfirmEmailCodeVm
@{
    ViewBag.Title = "ConfirmEmailCode";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ConfirmEmailCode", "Account"@*, new { ReturnUrl = Model.ReturnUrl }*@, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
@Html.AntiForgeryToken()
@Html.Hidden("Email", @Model.Email)
<h4>Send verification code</h4>
<hr />
@Html.ValidationSummary("", new { @class = "text-danger" })
<div class="form-group">
    @Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" class="btn btn-default" value="Verify" />
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


